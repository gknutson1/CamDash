<section class="weather" style="grid-row: 2; grid-column: 1 / 3">

      <!--Loading placeholder while we wait for weather data to be available-->
      <div id="weather-loader">
            <span class="loading loading-spinner loading-lg"></span>
            <p id="weather-status">Determining location</p>
      </div>

      <!--Actual container for weather data-->
      <div id="weather-data" class="flex-row" style="display: none">
            <div class="flex-col">
                  <data class="city"/>
                  <data class="temp text-xl font-bold"/>
                  <div class="flex-row">
                        <div>≋</div>
                        <data class="wind-speed"></data>
                        <div class="text-xs">MPH</div>
                        <data class="text-lg wind-direction">⮝</data>
                  </div>
                  <img class="icon"/>
            </div>
            <div class="divider divider-horizontal"/>
            <div class="forecast-container">
                  <div class="forecast-box">
                        <div class="flex-col fc-element">
                              <time class="fc-time"></time>
                              <data class="font-semibold fc-temp"></data>
                              <div class="rel-box bar-box">
                                    <div class="fc-bar-top bg-primary"></div>
                                    <div class="fc-bar bg-primary"></div>
                              </div>
                              <div class="rel-box img-box">
                                    <img class="fc-icon"></img>
                              </div>
                        </div>
                  </div>
            </div>
      </div>
</section>

<script>
      import {genWeather} from "../scripts/weather";
      genWeather()
</script>
